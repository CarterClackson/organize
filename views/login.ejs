<%- include('partials/header') %>
<style>
    .full-width-container { display: block !important; }
</style>
<div class="login-page">
<div class="login-container">
  <h1 class="center">Login</h1>

  <div class="login-form">
        <div class="">
          <form action="/login" method="POST">
            <div class="">
              <input type="email" class="first" name="username" placeholder="Email">
            </div>
            <div class="">
              <input type="password" class="last" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn-blue">Register</button>
          </form>
    </div>
<span class="center or">- or -</span>
<div class="social-login">
      <div class="">
        <div class="">
          <a class="social-option" href="/auth/google" role="button">
            <img src="/images/google.png" style="width: 30px; margin-top: -3px;">
            Sign In with Google
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

</div>

<%- include('partials/header') %>
